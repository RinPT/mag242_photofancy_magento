<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.container">
            <block name="trustedshops_trustedshops.selector" class="Trustedshops\Trustedshops\Block\Selector" before="-" template="selector.phtml"/>
        </referenceContainer>
        <referenceContainer name="footer">
            <block name="trustedshops_trustedshops.shopreview" class="Trustedshops\Trustedshops\Block\Shopreview" after="footer_links" template="shopreview.phtml" />
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block name="trustedshops_trustedshops.trustbadge" class="Trustedshops\Trustedshops\Block\Trustbadge" before="-" template="trustbadge.phtml" />
        </referenceContainer>
    </body>
</page>
